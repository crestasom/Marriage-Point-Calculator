<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testappv4"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/index"
        android:label="Marriage Point Calculator"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.crestaSom.marriagepointcalculator.MainActivity"
            android:screenOrientation="portrait"
            android:label="Marriage Point Calculator" >
        </activity>
        <activity
            android:name="com.crestaSom.marriagepointcalculator.Welcome_Activity"
            android:label="@string/title_activity_welcome_" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.crestaSom.marriagepointcalculator.PlayerSelection"
            android:label="Player Details" >
            <intent-filter android:label="Marriage Point Calculator" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.crestaSom.marriagepointcalculator.Test"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.crestaSom.marriagepointcalculator.ScoreCard"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_score_card" >
        </activity>
        <activity
            android:name="com.crestaSom.marriagepointcalculator.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
        <activity
            android:name="com.crestaSom.marriagepointcalculator.HelpActivity"
            android:label="@string/title_activity_help"
             android:theme="@android:style/Theme.Translucent.NoTitleBar"
             >
        </activity>
        <activity
            android:name="com.crestaSom.marriagepointcalculator.AboutActivity"
            android:label="@string/title_activity_about"
             android:theme="@android:style/Theme.Translucent.NoTitleBar"
             >
        </activity>
    </application>

</manifest>