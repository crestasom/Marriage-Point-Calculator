<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <item>
        <shape>
            <gradient
                android:startColor="#093F95"
                android:endColor="#113876"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#113876" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>